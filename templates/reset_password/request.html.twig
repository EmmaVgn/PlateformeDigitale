{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block body %}
	<section class="py-20 px-6 bg-[#f5f5e9] text-[#032b35]">
		<div class="max-w-md mx-auto container">
			<h1 class="text-3xl font-title text-center font-bold mb-6 text-primary">Mot de passe oublié ?</h1>

			{% for flash_error in app.flashes('reset_password_error') %}
				<div class="mb-4 bg-red-100 text-red-800 px-4 py-3 rounded text-sm">
					{{ flash_error }}
				</div>
			{% endfor %}

			<p class="text-center text-gray-700 mb-6 font-body">
				Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
			</p>

			{{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}
			<div>
				{{ form_label(requestForm.email, 'Adresse email') }}
				{{ form_widget(requestForm.email, {
                    'attr': {
                        'placeholder': 'votre@email.fr',
                        'class': 'w-full border border-gray-300 p-3 rounded font-body'
                    }
                }) }}
				{{ form_errors(requestForm.email) }}
			</div>

			<div class="text-center">
				<button type="submit" class="bg-[#085669] hover:bg-[#064b57] text-white py-2 px-6 rounded transition">
					Envoyer le lien de réinitialisation
				</button>
			</div>
			{{ form_end(requestForm) }}
		</div>
	</section>
{% endblock %}
