{% extends 'base.html.twig' %}

{% block title %}Votre avis sur la formation
{% endblock %}

{% block body %}
	<section class="max-w-3xl mx-auto py-12 px-6">
		<h1 class="text-3xl font-bold mb-8 text-center text-[#032b35]">
			Donnez votre avis sur "{{ formation.title }}"
		</h1>

		{{ form_start(form) }}
		<div class="mb-6">
			{{ form_label(form.noteContenu, 'Note sur le contenu') }}
			{{ form_widget(form.noteContenu, { 'attr': { 'class': 'w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary' } }) }}
			{{ form_errors(form.noteContenu) }}
		</div>

		<div class="mb-6">
			{{ form_label(form.noteSupport, 'Note sur les supports') }}
			{{ form_widget(form.noteSupport, { 'attr': { 'class': 'w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary' } }) }}
			{{ form_errors(form.noteSupport) }}
		</div>

		<div class="mb-6">
			{{ form_label(form.commentaireLibre, 'Commentaire (facultatif)') }}
			{{ form_widget(form.commentaireLibre, { 'attr': { 'class': 'w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary' } }) }}
			{{ form_errors(form.commentaireLibre) }}
		</div>

		<div class="text-center">
			<button type="submit" class="bg-primary hover:bg-hover text-white px-6 py-2 rounded shadow">
				Envoyer mon avis
			</button>
		</div>
		{{ form_end(form) }}
	</section>
{% endblock %}
