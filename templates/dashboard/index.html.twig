{% extends 'base.html.twig' %}

{% block title %}Mon tableau de bord{% endblock %}

{% block body %}
	<div class="max-w-6xl mx-auto px-4 py-8">
		<h1 class="text-2xl font-bold text-gray-800 mb-6">
			Bienvenue {{ app.user.firstname }} ðŸ‘‹
		</h1>

		<section class="mt-8">
			<h2 class="text-xl font-semibold text-gray-700 mb-4">Formations en cours</h2>

			{% if inscriptions|length > 0 %}
				<div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
					{% for inscription in inscriptions %}
						<div class="border border-gray-200 rounded-xl p-4 shadow-sm bg-white">
							<h3 class="text-lg font-semibold text-gray-800 mb-2">{{ inscription.formation.title }}</h3>
							<p class="text-sm text-gray-600 mb-4">Progression : {{ inscription.progression }}%</p>
							<a href="{{ path('app_formation_show', { slug: inscription.formation.slug }) }}"
								class="inline-block text-sm text-indigo-600 hover:underline font-medium">
								Reprendre la formation
							</a>
						</div>
					{% endfor %}
				</div>
			{% else %}
				<p class="text-gray-600">Vous n'avez encore aucune formation en cours.</p>
			{% endif %}
		</section>
	</div>
{% endblock %}
