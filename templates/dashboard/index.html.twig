{% extends 'base.html.twig' %}

{% block title %}Mon tableau de bord
{% endblock %}

{% block body %}
	<h1>Bienvenue
		{{ app.user.firstname }}
		ðŸ‘‹</h1>

	<section style="margin-top: 2rem;">
		<h2>Formations en cours</h2>

		{% if inscriptions|length > 0 %}
			<div style="display: grid; gap: 1rem; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));">
				{% for inscription in inscriptions %}
					<div style="border: 1px solid #ddd; padding: 1rem; border-radius: 8px;">
						<h3>{{ inscription.formation.title }}</h3>
						<p>Progression :
							{{ inscription.progression }}%</p>
						<a href="{{ path('app_formation_show', { slug: inscription.formation.slug }) }}">Reprendre la formation</a>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p>Vous n'avez encore aucune formation en cours.</p>
		{% endif %}
	</section>
{% endblock %}
