{# templates/quiz/results.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Résultats du Quiz -
	{{ quiz.title }}
{% endblock %}

{% block body %}
	<div class="results-container">
		<h1>Résultats du quiz :
			{{ quiz.title }}</h1>

		<p>
			<strong>Votre score :</strong>
			{{ score }}
			/
			{{ total }}</p>

		<div>
			{% if score >= (quiz.questions|length / 2) %}
				<p class="text-green-500">Félicitations, vous avez réussi le quiz !</p>
			{% else %}
				<p class="text-red-500">Dommage, vous n'avez pas réussi le quiz. Essayez encore !</p>
			{% endif %}
		</div>

		<a href="{{ path('quiz_show', {'slug': quiz.slug}) }}" class="btn btn-primary">Reprendre le quiz</a>
	</div>
{% endblock %}
