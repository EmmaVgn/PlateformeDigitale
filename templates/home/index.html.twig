{% extends 'base.html.twig' %}

{% block title %}Accueil - Cameleon Solutions Learning{% endblock %}

{% block body %}

	<section class="bg-gray-100 py-16 text-center">
		<div class="max-w-3xl mx-auto px-4">
			<h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4 leading-tight">
				Construisez votre avenir avec<br>
				<strong class="text-indigo-600">Cameleon Solutions Learning</strong>
			</h1>
			<a href="{{ path('app_formations') }}"
			   class="inline-block mt-6 px-6 py-3 bg-indigo-600 text-white text-sm font-medium rounded hover:bg-indigo-700">
				DÃ©couvrir les formations
			</a>
			<div class="mt-4 space-x-4 text-sm text-gray-600">
				<a href="{{ path('app_login') }}" class="hover:underline">Connexion</a>
				/
				<a href="{{ path('app_register') }}" class="hover:underline">Inscription</a>
			</div>
		</div>
	</section>

	<section class="py-14 px-4">
		<h2 class="text-2xl font-semibold text-center text-gray-800 mb-10">Formations populaires</h2>

		<div class="max-w-6xl mx-auto grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
			{% for formation in formations %}
				<div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm flex flex-col justify-between">
					<div>
						<h3 class="text-lg font-semibold text-gray-800 mb-2">{{ formation.title }}</h3>
						<p class="text-sm text-gray-600 mb-4">
							{{ formation.description|slice(0, 100) ~ '...' }}
						</p>
					</div>
					<a href="{{ path('app_formation_show', { slug: formation.slug }) }}"
					   class="inline-block text-sm text-indigo-600 hover:underline font-medium">
						Voir la formation
					</a>
				</div>
			{% else %}
				<p class="text-center text-gray-600 col-span-full">Aucune formation disponible pour le moment.</p>
			{% endfor %}
		</div>
	</section>
{% endblock %}
