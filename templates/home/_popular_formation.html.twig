<h2 class="text-2xl font-title text-center text-primary mb-10">Formations populaires</h2>

<div class="max-w-6xl mx-auto grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 ">
	{% for formation in formations %}
		<div class="bg-white border border-gray-200 shadow-sm hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 rounded-lg border border-gray-200 rounded-xl p-6 flex flex-col justify-between font-body">
			<div>
				<h3 class="text-lg font-semibold text-primary mb-2">{{ formation.title }}</h3>
				<p class="text-sm text-primary/80 mb-4">
					{{ formation.description|slice(0, 100) ~ '...' }}
				</p>
			</div>
			<a href="{{ path('app_formation_show', { slug: formation.slug }) }}" class="inline-block text-white bg-primary px-5 py-2 text-sm rounded-md font-body border border-white hover:bg-secondary hover:border-[#085669] transition">
				Voir la formation
			</a>
		</div>
	{% else %}

		<p class=" text-center text-primary/80 col-span-full">Aucune formation disponible pour le moment.</p>
	{% endfor %}
</div>
