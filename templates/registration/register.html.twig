{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="flex flex-col lg:flex-row mt-3">

		<!-- Colonne gauche (image ou message) -->


		<!-- Colonne droite (formulaire) -->
			<div class="lg:w-1/2 w-full flex items-center justify-center p-8 ml mr-2-"> <div class="w-full max-w-sm">

				{% for flash_error in app.flashes('verify_email_error') %}
					<div class="mb-6 bg-red-100 text-red-800 px-4 py-3 rounded-lg text-sm">
						{{ flash_error }}
					</div>
				{% endfor %}

				<h1 class="text-2xl font-title font-bold text-primary mb-6 text-center">Créer un compte</h1>

				{{ form_start(registrationForm) }}

				<div class="space-y-4 mr-2">

					{{ form_row(registrationForm.firstname, {
					label_attr: {'class': 'block text-sm font-medium text-gray-700'},
					attr: {'class': 'mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary'}
				}) }}

					{{ form_row(registrationForm.lastname, {
					label_attr: {'class': 'block text-sm font-medium text-gray-700'},
					attr: {'class': 'mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary'}
				}) }}

					{{ form_row(registrationForm.email, {
					label_attr: {'class': 'block text-sm font-medium text-gray-700'},
					attr: {'class': 'mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary'}
				}) }}

					{{ form_row(registrationForm.phone, {
					label_attr: {'class': 'block text-sm font-medium text-gray-700'},
					attr: {'class': 'mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary'}
				}) }}

					{{ form_row(registrationForm.plainPassword, {
					label: 'Mot de passe',
					label_attr: {'class': 'block text-sm font-medium text-gray-700'},
					attr: {'class': 'mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary'}
				}) }}

					{{ form_row(registrationForm.plainPasswordConfirm, {
					label: 'Confirmer le mot de passe',
					label_attr: {'class': 'block text-sm font-medium text-gray-700'},
					attr: {'class': 'mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary'}
				}) }}


					{{ form_row(registrationForm.formationsSouhaitees, {
					label_attr: {'class': 'block text-sm font-medium text-gray-700'},
					attr: {'class': 'mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary'}
				}) }}

					<div class="flex items-center mr-2">
						{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'rounded border-gray-300 text-primary shadow-sm focus:ring-primary'}}) }}
						{{ form_label(registrationForm.agreeTerms, "J'accepte les conditions générales", {'label_attr': {'class': 'ml-2 text-sm text-gray-600'}}) }}
					</div>
					{{ form_errors(registrationForm.agreeTerms) }}
					<div class="flex items-center mr-2">
						{{ form_widget(registrationForm.agreeRgpd, {'attr': {'class': 'rounded border-gray-300 text-primary shadow-sm focus:ring-primary'}}) }}
						{{ form_label(registrationForm.agreeRgpd, null, {'label_attr': {'class': 'ml-2 text-sm text-gray-600'}}) }}
					</div>
					{{ form_errors(registrationForm.agreeRgpd) }}

					<button type="submit" class=" bg-primary hover:bg-hover text-white py-2 px-4 rounded-md shadow transition">
						M'inscrire
					</button>
				</div>

				{{ form_end(registrationForm) }}
			</div>
		</div>
		<div class=" lg:w-1/2  bg-primary text-white flex flex-col justify-center items-center p-8">
			<img src="{{ asset('img/Cameleon_L_Blanc-BGT.png') }}" alt="Logo" class="mb-6" style="height: 205px;">
			<h2 class="text-3xl font-title font-semibold mb-4">Bienvenue !</h2>
			<p class="text-center max-w-sm text-white/80">Inscrivez-vous pour accéder à vos formations,
				<br>
				suivre vos progrès et bien plus encore.</p>
		</div>
	</div>
{% endblock %}
