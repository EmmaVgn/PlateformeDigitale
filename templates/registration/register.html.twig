{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="mb-4 bg-red-100 text-red-700 px-4 py-3 rounded">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Créer un compte</h1>

        {{ form_start(registrationForm) }}
            <div class="mb-4">
                {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="mb-4">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, "J'accepte les conditions générales", {'label_attr': {'class': 'text-sm text-gray-600 ml-2'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit"
                    class="w-full bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700 transition">
                M'inscrire
            </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
