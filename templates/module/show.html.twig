{% extends 'base.html.twig' %}

{% block title %}Module :
	{{ module.title }}
{% endblock %}

{% block body %}
	<div class="max-w-4xl mx-auto py-6">
		<h1 class="text-2xl font-bold mb-4">{{ module.title }}</h1>
		<p class="mb-6 text-gray-700">{{ module.content|nl2br }}</p>

		{% if module.imageName %}
			<iframe src="{{ asset('uploads/module/' ~ module.imageName) }}" width="100%" height="600px"></iframe>
		{% else %}
			<p class="text-sm text-gray-500">Aucun fichier disponible.</p>
		{% endif %}
	</div>
{% endblock %}
