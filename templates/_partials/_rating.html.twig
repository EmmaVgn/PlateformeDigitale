<!-- Affichage de la moyenne des avis -->
<div class="moyenne">
	<h3>Moyenne des Avis :
		{{ moyenne|number_format(1) }}/5</h3>
</div>

<div class="reviews-container">
	{% for review in recentReviews %}
		<div class="avis-card">
			<div class="card-header">
				<h4>{{ review.user.firstname }}</h4>
				<p>
					<strong>Date :</strong>
					{{ review.createdAt|date('d F Y') }}</p>
			</div>
			<div class="card-body">
				<p>{{ review.comment }}</p>
			</div>
			<div class="card-footer">
				<p>
					<strong>Note :</strong>
					{{ review.rating }}/5</p>
			</div>
		</div>
	{% endfor %}
</div>
